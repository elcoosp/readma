{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "fmt": {
      "dependsOn": ["^fmt"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:up": {
      "dependsOn": ["^test:up"]
    },
    "test:cov": {
      "dependsOn": ["^test:cov"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "doc": {
      "dependsOn": ["^doc"]
    }
  }
}
